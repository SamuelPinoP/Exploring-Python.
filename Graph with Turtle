#What percent of the class did and did not pass, what percent got B and As. 
#It must add to 100 percent.

from turtle import Screen, Turtle

# Calificaciones
suspensos = int(input('Que porciento suspendio?:'))
aprobados = int(input('Cuantos aprobaron en porciento?:'))
notables = int(input('Dame el porciento de notables?:'))
sobresalientes = int(input('Los pocos sobresalientes en porciento cuantos fueron?:'))

# Inicializacion
pantalla = Screen()
tortuga = Turtle()
tortuga.speed(0)

# Dibujo de la base de la grafica
tortuga.setheading(180)
tortuga.penup()
tortuga.left(90)
tortuga.forward(150)
tortuga.left(90)
tortuga.pendown()
tortuga.setheading(180)
tortuga.forward(50)
tortuga.penup()
tortuga.forward(20)
tortuga.pendown()
tortuga.forward(50)
tortuga.penup()
tortuga.forward(20)
tortuga.pendown()
tortuga.forward(50)
tortuga.penup()
tortuga.forward(20)
tortuga.pendown()
tortuga.forward(50)

# Dibujo de la linea para los suspensos.
tortuga.right(90)
tortuga.forward(suspensos * 5)
tortuga.right(90)
tortuga.forward(50)
tortuga.right(90)
tortuga.forward(suspensos * 5)
tortuga.penup()
tortuga.left(90)
tortuga.forward(20)
tortuga.pendown()
tortuga.left(90)

# Dibujo de la linea para los aprobados.
tortuga.forward(aprobados * 5)
tortuga.right(90)
tortuga.forward(50)
tortuga.right(90)
tortuga.forward(aprobados * 5)
tortuga.left(90)
tortuga.penup()
tortuga.forward(20)
tortuga.pendown()
tortuga.left(90)

# Dibujo de las lineas para los notables.
tortuga.forward(notables * 5)
tortuga.right(90)
tortuga.forward(50)
tortuga.right(90)
tortuga.forward(notables * 5)
tortuga.left(90)
tortuga.penup()
tortuga.forward(20)
tortuga.pendown()
tortuga.left(90)

# Dibujo de la linea para los sobresalientes.
tortuga.forward(sobresalientes * 5)
tortuga.right(90)
tortuga.forward(50)
tortuga.right(90)
tortuga.forward(sobresalientes * 5)
tortuga.penup()
tortuga.forward(20)
tortuga.right(90)
tortuga.forward(40)

# Escribir texto para los sobresalientes.
tortuga.pendown()
tortuga.write('sobresalientes')
tortuga.right(90)
tortuga.penup()
tortuga.forward(sobresalientes * 5 + 50)
tortuga.pendown()
tortuga.write(sobresalientes)
tortuga.penup()
tortuga.right(90)
tortuga.forward(20)
tortuga.pendown()
tortuga.write("%")
tortuga.penup()
tortuga.left(90)
tortuga.backward(5)
tortuga.backward(sobresalientes * 5 + 50)
tortuga.left(90)
tortuga.forward(90)
tortuga.pendown()

# Escribir texto para los notables.
tortuga.pendown()
tortuga.write('notables')
tortuga.right(90)
tortuga.penup()
tortuga.forward(notables * 5 + 50)
tortuga.pendown()
tortuga.write(notables)
tortuga.penup()
tortuga.right(90)
tortuga.forward(20)
tortuga.pendown()
tortuga.write("%")
tortuga.penup()
tortuga.left(90)
tortuga.backward(5)
tortuga.backward(notables * 5 + 50)
tortuga.left(90)
tortuga.forward(90)
tortuga.pendown()


# Escribir texto para los aprobados.
tortuga.pendown()
tortuga.write('aprobados')
tortuga.right(90)
tortuga.penup()
tortuga.forward(aprobados * 5 + 50)
tortuga.pendown()
tortuga.write(aprobados)
tortuga.penup()
tortuga.right(90)
tortuga.forward(20)
tortuga.pendown()
tortuga.write("%")
tortuga.penup()
tortuga.left(90)
tortuga.backward(5)
tortuga.backward(aprobados * 5 + 50)
tortuga.left(90)
tortuga.forward(100)
tortuga.pendown()

# Escribir texto para los suspensos.
tortuga.pendown()
tortuga.write('suspensos')
tortuga.right(90)
tortuga.penup()
tortuga.forward(suspensos * 5 + 50)
tortuga.pendown()
tortuga.write(suspensos)
tortuga.penup()
tortuga.right(90)
tortuga.forward(20)
tortuga.pendown()
tortuga.write("%")
tortuga.penup()
tortuga.left(90)
tortuga.backward(5)
tortuga.backward(suspensos * 5 + 50)
tortuga.left(90)
tortuga.forward(100)
tortuga.pendown()
tortuga.hideturtle()

#Despedida
print('Gracias por usar este programa')
print("Bye Bye")

# Salir cuando se pulse el boton en la ventana
pantalla.exitonclick()
